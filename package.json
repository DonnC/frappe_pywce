{
  "name": "frappe-pywce-monorepo",
  "private": true,
  "scripts": {
    "postinstall": "npm run install-all",
    "install-all": "cd emulator && yarn install && cd ../builder && yarn install && cd ../bridge && npm install",
    "dev": "concurrently \"npm:dev:emulator\" \"npm:dev:builder\" \"npm:dev:bridge\"",
    "dev:emulator": "cd emulator && yarn dev",
    "dev:builder": "cd builder && yarn dev",
    "dev:bridge": "node --watch bridge/index.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}